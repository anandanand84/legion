// example IDL file

namespace legion;

attribute "priority";

enum Side : byte { Bid , Ask }

table Market {
  id:ulong;
  side:Side;
  qty:ulong;
}

table Limit {
  id:ulong;
  side:Side;
  qty:ulong;
  price:ulong;
}


table Cancel {
  id:ulong;
}

union OrderType { Market, Limit, Cancel }

table OrderMessage {
  type:OrderType;
}

root_type OrderMessage;